@using IISHF.Core.Controllers
@using MailKit.Search
@model IISHF.Core.Models.PlayerStatisticsViewModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5 title">Player Statistics</h1>
            @{


                <table class="table table-condensed table-striped table-hover mb-5 tablesaw" data-tablesaw-mode="stack">
                    <thead>
                        <tr>
                            <th class="text-center" colspan="2">Team</th>
                            <th class="text-center">Player Name</th>
                            <th class="text-center">Goals</th>
                            <th class="text-center">Assists</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Penalties</th>
                            <th class="text-center">Games Played</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in Model.PlayerStatistics
                    .OrderByDescending(x => x.Total)
                    .ThenByDescending(x => x.Goals)
                    .ThenByDescending(x => x.Assists)
                    .ThenByDescending(x => x.GamesPlayed)
                    .ThenByDescending(x => x.Penalties)
                    .ThenByDescending(x => x.TeamName))
                        {
                            <tr>
                                <td>
                                    <img class="img img-fluid" style="height: 50px; width:50px" src="@team.TeamLogoUrl" alt="@team.TeamName" />
                                </td>
                                <td class="align-middle"><span class="playerteam"><strong>@team.TeamName</strong></span></td>
                                <td class="align-middle ">@team.PlayerName</td>
                                <td class="align-middle text-center">@team.Goals</td>
                                <td class="align-middle text-center">@team.Assists</td>
                                <td class="align-middle text-center">@team.Total</td>
                                <td class="align-middle text-center">@team.Penalties</td>
                                <td class="align-middle text-center">@team.GamesPlayed</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Initialize Tablesaw
        $(document).trigger("enhance.tablesaw");

        if (@Model.PlayerStatistics.Count === 0) {
            $("#v-pills-player-stats-tab").hide()
        }
    });
</script>


<script>
    $(document).ready(function () {
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/dataHub") // Ensure this matches your SignalR hub endpoint
            .configureLogging(signalR.LogLevel.Information)
            .build();

        connection.start().then(function () {
            console.log("SignalR connected");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        connection.on("UpdatePlayerStats", function (year, shortCode) {

            //Triggers a GET of the schedule and results again,
            //ToDo GET teams and logo url sent back instead
            $.get('/umbraco/surface/events/GetPlayerStats', { year: "'" + year + "'", titleEvent: "'" + shortCode + "'" }, function (data) {
                $('#playerStats').html(data);
            });
        });
    });
</script>