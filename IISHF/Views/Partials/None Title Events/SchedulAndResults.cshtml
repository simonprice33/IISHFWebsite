@using IISHF.Core.Controllers
@using MailKit.Search
@model IISHF.Core.Models.ScheduleAndResultsViewModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Schedule and Results</h1>
        </div>
        @{
            if (Model?.ScheduleAndResults == null || !Model.ScheduleAndResults.Any())
            {
                <h2 class="text-center">Schedule pending </h2>
            }

            foreach (var game in Model.ScheduleAndResults.OrderBy(x => x.GameNumber))
            {
                <div class="row justify-content-center align-items-stretch mb-3">
                    <div class="col-12 text-center">
                        @{
                            if (!string.IsNullOrWhiteSpace(game.Group))
                            {
                                <div class="badge bg-secondary text-white text-center">Group : @game.Group - @game.GameDateTime.ToString("f")</div>
                            }
                            else
                            {
                                <div class="text-center badge bg-secondary text-white">@game.Remarks <br /> @game.GameDateTime.ToString("f")</div>
                            }
                        }
                    </div>
                    <div class="col team home-team text-center">
                        <div class="col-sm-2 col-lg-2 text-start">
                            <img class="img img-fluid" style="max-height: 45px" src="@game.HomeTeamLogoUrl" alt="@game.HomeTeam" />
                            <div class="col-sm-12 team-name-text text-center">@game.HomeTeam</div>
                        </div>
                        <div id="homeTeamName" class="col-sm-9 col-md-6 col-lg-6 text-center">@game.HomeTeam</div>
                        <div class="col-sm-1 col-md-4 score-center">@game.HomeScore</div>
                    </div>
                    <div class="col-auto team trapezoid">
                        vs.
                    </div>
                    <div class="col team away-team text-center">
                        <div class="col-sm-1 col-md-4 col-lg-4 score-center">@game.AwayScore</div>
                        <div id="awayTeamName" class="col-sm-9 col-md-6 col-lg-6 text-center">@game.AwayTeam</div>
                        <div class="col-sm-2 col-lg-2 text-end">
                            <img class="img img-fluid" style="max-height: 45px" src="@game.AwayTeamLogoUrl" alt="@game.AwayTeam" />
                            <div class="team-name-text col-sm-12 text-center">@game.AwayTeam</div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

