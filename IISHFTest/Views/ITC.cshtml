    function findDuplicates(numbers) {
        var duplicates = new Set();
        var seen = new Map();

        numbers.forEach(item => {
            if (seen.has(item.number)) {
                duplicates.add(item.number);
            } else {
                seen.set(item.number, item.row);
            }
        });

        return duplicates;
    }

