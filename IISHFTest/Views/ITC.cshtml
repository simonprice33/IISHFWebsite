    function displayValidationErrors(errors) {
        var errorContainer = $('#submissionErrors');
        errorContainer.empty();

        if (errors && errors.length > 0) {
            errorContainer.show();
            var errorList = $('<ul></ul>');

            // Create a mapping to organize errors by role
            var errorMap = {};

            for (var i = 0; i < errors.length; i++) {
                if (errors[i] && errors[i].role) {
                    var role = errors[i].role;
                    var rowErrors = errors[i].rowErrors;
                    var name = errors[i].name;

                    // Create a new list for each role if it doesn't exist
                    if (!errorMap[role]) {
                        errorMap[role] = {
                            roleList: $('<ul></ul>'),
                            roleItem: $('<li></li>').text(role)
                        };
                    }

                    var error = name !== "" ? `${name} - ${rowErrors.join(", ")}` : `${rowErrors.join(", ")}`;

                    // Add the error information to the corresponding role list
                    errorMap[role].roleList.append($('<li></li>').text(error));
                }
            }

            // Generate HTML for the nested list structure
            for (var role in errorMap) {
                errorMap[role].roleItem.append(errorMap[role].roleList);
                errorList.append(errorMap[role].roleItem);
            }

            // Append the final error list to the container
            errorContainer.append(errorList);
        } else {
            errorContainer.hide();
        }
    }

