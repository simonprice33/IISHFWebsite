@using IISHFTest.Core.Controllers;
@using IISHFTest.Core.Controllers.SurfaceControllers
@model IISHFTest.Core.Models.ContactFormViewModel

<section id="contact" class="home-contact-section">
    <div class="container customer-container mt-3">
        <div class="row">
            
            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
                <h1 class="fs22 orange">Message us</h1>
                @if ((string)TempData["status"] == "Message Sent Ok")
                {
                    <h4 class="orange mt-5">Your message has been submitted to IISHF Communications team and we be responded to accordingly. </h4>
                }
                else
                {
                    @using (Html.BeginUmbracoForm<ContactController>("Post"))
                    {

                        <div class="form-group mb-2">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control custom-input", placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control custom-input", placeholder = "Email", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control custom-input", placeholder = "Subject" })
                            @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-2">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control custom-input", rows = "4", placeholder = "Message" })
                            @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-custom-submit">Send message</button>
                    }
                }
            </div>
            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <h1 class="fs22 orange">Data Protection and Privacy Policies</h1>
                <p>
                    <a class="nav-link nav-link-white" href="/Privacy/">IISHF Privacy Policy</a>
                </p>
                <p>
                    <a class="nav-link nav-link-white" href="/general-data-protection-regulations/">GDPR </a>
                </p>
            </div>
        </div>
    </div>
</section>