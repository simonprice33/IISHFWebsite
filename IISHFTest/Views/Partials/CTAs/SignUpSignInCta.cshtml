@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
<section class="bg-light">
    <div class="container custom-container">
        <div class="row">
            <div class="col text-center py-5">

                <h1 class="display-4">@Model.Value("callToActionTitle")</h1>
                <p class="lead">@Model.Value("callToActionText")</p>
                @{

                    var link = Model.Value<Umbraco.Cms.Core.Models.Link>("callToActionLink");
                    if (link != null)
                    {
                        <a href="@link.Url" target="@link.Target">@link.Name</a>
                    }
                }
            </div>
        </div>
    </div>

</section>