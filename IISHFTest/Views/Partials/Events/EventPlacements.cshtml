@model IISHFTest.Core.Models.FinalPlacementsViewModel
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using IISHFTest.Helpers

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Placements</h1>

            @foreach (var result in Model.TeamPlacements.OrderBy(placement => placement.Placement))
            {
                string boxClass = PlacementHelper.GetPlacementClass(result.Placement);

                <div class="container mb-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="@($"skewed-border-box {boxClass}")">
                                <div class="skewed-border-box-content">
                                    <h3 class="text-center">
                                        <span class="placement d-block d-md-inline">@result.Placement.ToOrdinal()</span>
                                        <span class="vertical-line d-none d-md-inline">|</span>
                                        <span class="team-name d-block d-md-inline">@result.TeamName</span>
                                        <span class="vertical-line d-none d-md-inline">|</span>
                                        <span class="iso d-block d-md-inline">@result.Iso3</span>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>